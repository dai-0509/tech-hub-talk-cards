{
  "version": 2,
  "builds": [
    {
      "src": "dist/client/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["shared/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|html|woff|woff2|ttf|eot))",
      "dest": "dist/client/$1"
    },
    {
      "src": "/admin",
      "dest": "dist/client/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "dist/client/index.html"
    }
  ]
}